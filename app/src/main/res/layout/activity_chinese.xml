<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none"
   >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".Chinese">

        <ImageView
            android:id="@+id/img_4"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="@color/lightred"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/title_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="BAK KUT TEH"
            android:textSize="60dp"
            android:gravity="center"
            android:textColor="@color/black"
            android:fontFamily="@font/bangers"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <androidx.cardview.widget.CardView
            android:id="@+id/card_12"
            android:layout_width="250dp"
            android:layout_height="200dp"
            android:layout_marginTop="30dp"
            app:cardCornerRadius="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/img_4"
            app:layout_constraintStart_toStartOf="parent"
            >
            <ImageView
                android:layout_width="match_parent"
                android:scaleType="centerCrop"
                android:layout_height="match_parent"
                android:background="@drawable/bakkutteh"
                />

        </androidx.cardview.widget.CardView>
        <TextView
            android:id="@+id/text_9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ingrediants"
            android:layout_marginTop="15dp"
            android:textColor="@color/black"
            android:fontFamily="sans-serif-medium"
            android:textSize="30dp"
            app:layout_constraintTop_toBottomOf="@id/card_12"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />
        <TextView
            android:id="@+id/text_10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/andika"
            android:textColor="@color/black"
            android:textSize="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/text_9"
            android:text=" - 4 cups water\n
- 1 pack pre-packed Bak Kut Teh\n    herbs\n
- 2 heads garlic\n
- 1 lb. (400 g) pork ribs, cut into\n    pieces\n
- 6 dried shitake mushrooms, soaked \n   and cut into halves\n
- 1 cup tofu puffs, cut into halves\n\n
 SEASONING\n
- 2 tablespoons soy sauce\n
- 1 teaspoon dark soy sauce\n
- 1 tablespoon oyster sauce\n
- 3 dashes white pepper powder\n
- salt to taste\n\n
 DIPPING SAUCE\n
- 4-5 bird's eyes chilies or Thai chilies,\n    sliced\n
- 1 tablespoon minced garlic\n
- 1 tablespoon soy sauce\n
- 1 tablespoon Indonesian ABC sweet\n    soy sauce"/>
        <TextView
            android:id="@+id/text_11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Method"
            android:layout_marginTop="15dp"
            android:textColor="@color/black"
            android:fontFamily="sans-serif-medium"
            android:textSize="30dp"
            app:layout_constraintTop_toBottomOf="@id/text_10"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/text_12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/andika"
            android:textColor="@color/black"
            android:textSize="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/text_11"
            android:text="STEP 1\n Add the water in a big claypot (preferred) or soup pot and bring it to boil. Add the garlic, Bak Kut Teh herbs, pork ribs, mushrooms, tofu puffs and simmer on low heat for about 1 - 2 hours. \n\nSTEP 2\n Mix all the ingredients in the Dipping Sauce together. Transfer to a small condiment bowl\n\nSTEP 3\nAdd in all ingredients in Seasoning and and simmer for another 10 minutes. Serve immediately with the Dipping Sauce.\n"
            />
        <android.widget.Button
            android:id="@+id/newrecipe"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_bg_5"
            android:textColor="@color/white"
            android:text="CREATE NEW RECIPE"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/text_12"/>

        <TextView
            android:id="@+id/text3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/newrecipe"
            />


    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>