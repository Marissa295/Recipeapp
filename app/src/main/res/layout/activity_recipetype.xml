<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none"

   >


  <androidx.constraintlayout.widget.ConstraintLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      tools:context=".Recipetype">

    <TextView
        android:id="@+id/Category"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/bangers"
        android:gravity="center"
        android:text="CHOOSE CUISINE TYPE"
        android:background="@color/yellow"
        android:textColor="@color/black"
        android:textSize="35dp"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card_8"
        android:layout_width="123dp"
        android:layout_height="135dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        app:cardBackgroundColor="@color/lightorange"
        app:cardCornerRadius="15dp"
        app:layout_constraintEnd_toStartOf="@+id/card_9"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/Category">

      <ImageButton
          android:id="@+id/button_7"
          android:layout_width="wrap_content"
          android:layout_height="100dp"
          android:background="@drawable/indian"
          android:scaleType="centerCrop" />

      <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="106dp"
          android:fontFamily="@font/abhaya_libre"
          android:gravity="center_horizontal"
          android:paddingLeft="5dp"

          android:text="Indian"
          android:textColor="@color/black"
          android:textSize="20dp" />


    </com.google.android.material.card.MaterialCardView>


    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card_9"
        android:layout_width="123dp"
        android:layout_height="135dp"
        android:layout_marginLeft="200dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="100dp"
        app:cardBackgroundColor="@color/lightgreen"
        app:cardCornerRadius="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/Category">

      <ImageButton
          android:id="@+id/button_8"
          android:layout_width="wrap_content"
          android:layout_height="100dp"
          android:background="@drawable/malay"
          android:scaleType="centerCrop" />

      <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="106dp"
          android:fontFamily="@font/abhaya_libre"
          android:gravity="center_horizontal"
          android:paddingLeft="5dp"
          android:text="Malay"
          android:textColor="@color/black"
          android:textSize="20dp" />


    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card_10"
        android:layout_width="123dp"
        android:layout_height="135dp"
        android:layout_marginTop="20dp"
        app:cardBackgroundColor="@color/lightred"
        app:cardCornerRadius="15dp"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/card_9">

      <ImageButton
          android:id="@+id/button_9"
          android:layout_width="wrap_content"
          android:layout_height="100dp"
          android:background="@drawable/chinese"
          android:scaleType="centerCrop" />

      <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="106dp"
          android:fontFamily="@font/abhaya_libre"
          android:gravity="center_horizontal"
          android:paddingLeft="5dp"
          android:text="Chinese"
          android:textColor="@color/black"
          android:textSize="20dp" />


    </com.google.android.material.card.MaterialCardView>

    <TextView
        android:id="@+id/newRecipe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/bangers"
        android:gravity="center"
        android:text="HEALTHY DIET RECIPES"
        android:background="@color/yellow"
        android:textColor="@color/black"
        android:textSize="35dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/card_10" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card_1"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:cardCornerRadius="8dp"
       android:layout_marginRight="190dp"
        app:cardBackgroundColor="@color/yellow"
        android:layout_marginTop="40dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/newRecipe">


      <ImageButton
          android:id="@+id/button_1"
          android:layout_width="wrap_content"
          android:layout_height="150dp"
          android:background="@drawable/turkeyragu"
          android:scaleType="centerCrop"
          />

      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="160dp"
          android:fontFamily="@font/aladin"
          android:gravity="center_horizontal"
          android:paddingLeft="10dp"
          android:paddingBottom="10dp"
          android:text="Turkey Ragu"
          android:textColor="@color/black"
          android:textSize="25dp" />

    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card_2"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:cardCornerRadius="8dp"
        android:layout_marginLeft="200dp"
        android:layout_marginRight="10dp"
        app:cardBackgroundColor="@color/yellow"
        android:layout_marginTop="40dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/newRecipe">

      <ImageButton
          android:id="@+id/button_2"
          android:layout_width="wrap_content"
          android:layout_height="150dp"


          android:background="@drawable/tunapasta"
          android:scaleType="centerCrop"
          />

      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="160dp"
          android:fontFamily="@font/aladin"
          android:gravity="clip_horizontal"
          android:paddingLeft="10dp"
          android:paddingBottom="10dp"
          android:text="Tuna Pasta Bake"
          android:textColor="@color/black"
          android:textSize="25dp" />



    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card_3"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:cardCornerRadius="8dp"
        android:layout_marginRight="190dp"
        app:cardBackgroundColor="@color/yellow"
        android:layout_marginTop="60dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/card_1">


      <ImageButton
          android:id="@+id/button_3"
          android:layout_width="wrap_content"
          android:layout_height="150dp"
          android:background="@drawable/salmonpasta"
          android:scaleType="centerCrop"
          />

      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="160dp"
          android:fontFamily="@font/aladin"

          android:paddingLeft="10dp"
          android:paddingBottom="10dp"
          android:text="Salmon Pasta"
          android:textColor="@color/black"
          android:textSize="25dp" />

    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card_4"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:cardCornerRadius="8dp"
        android:layout_marginLeft="200dp"
        android:layout_marginRight="10dp"
        app:cardBackgroundColor="@color/yellow"
        android:layout_marginTop="60dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/card_2">

      <ImageButton
          android:id="@+id/button_4"
          android:layout_width="wrap_content"
          android:layout_height="150dp"

          android:background="@drawable/springpasta"
          android:scaleType="centerCrop"
          />

      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="160dp"
          android:fontFamily="@font/aladin"
          android:gravity="clip_horizontal"
          android:paddingLeft="10dp"
          android:paddingBottom="10dp"
          android:text="Spring Pasta"
          android:textColor="@color/black"
          android:textSize="25dp" />



    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card_7"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:layout_marginRight="190dp"
        android:scrollbarAlwaysDrawHorizontalTrack="true"
        app:cardBackgroundColor="@color/yellow"
        app:cardCornerRadius="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/card_3">


      <ImageButton
          android:id="@+id/button_5"
          android:layout_width="wrap_content"
          android:layout_height="150dp"
          android:background="@drawable/greenlnguine"
          android:scaleType="centerCrop" />

      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="160dp"
          android:fontFamily="@font/aladin"
          android:paddingLeft="10dp"
          android:paddingBottom="10dp"
          android:text="Green Linguine"
          android:textColor="@color/black"
          android:textSize="25dp" />

    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card_6"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:cardCornerRadius="8dp"
        android:layout_marginLeft="200dp"
        android:layout_marginRight="10dp"
        app:cardBackgroundColor="@color/yellow"
        android:layout_marginTop="60dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/card_4">

      <ImageButton
          android:id="@+id/button_6"
          android:layout_width="wrap_content"
          android:layout_height="150dp"

          android:background="@drawable/prawnlinguane"
          android:scaleType="centerCrop"
          />

      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="160dp"
          android:fontFamily="@font/aladin"
          android:gravity="clip_horizontal"
          android:paddingLeft="10dp"
          android:paddingBottom="10dp"
          android:text="PrawnLinguane"
          android:textColor="@color/black"
          android:textSize="25dp" />



    </com.google.android.material.card.MaterialCardView>





  </androidx.constraintlayout.widget.ConstraintLayout>











  </ScrollView>